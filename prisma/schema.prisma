// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid()) // id equivale a primary key e uuid é id único universal
  username String @unique
  name     String

  created_at DateTime @default(now())

  @@map("users") // nome da minha tabela
}
